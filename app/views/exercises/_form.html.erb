<%= form_for @exercise do |f|%>
    <%= f.label :name, :class => 'form-label'%>
    <%= f.text_field :name, :class => 'form-control'%>

    <%= f.label :reps, :class => 'form-label'%>
    <%= f.number_field :reps, :class => 'form-control'%>

    <%= f.label :sets, :class => 'form-label'%>
    <%= f.number_field :sets, :class => 'form-control'%>

    <%= f.label :image, :class => 'form-label'%>
    <%= f.url_field :image, :class => 'form-control'%>
    </br>

    <%= f.label :gymplan_id, :class => 'form-label'%>
    <%= f.select :gymplan_id, Gymplan.pluck(:focus, :id), :include_blank => true, :class => 'form-control'%>
    </br>
    <%= f.submit :class => 'btn btn-success btn-lg'%>
<%end%>
